<div class="container"> 
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @user %>
            <%= form_with(scope: :session, url: login_path, local:true, class:"bg-secondary font-white shadow p-3 mb-4 rounded") do |f| %>
                <div class="form-group mb-4">
                    <%= f.label :email, class:"text-light" %> <br/>
                    <%= f.email_field :email, class:"form-control", placeholder:"Enter your email" %>
                </div>
                <div class="form-group mb-4">
                    <%= f.label :password, class:"text-light" %> <br/>
                    <%= f.password_field :password, class:"form-control", placeholder:"Enter your password" %>
                </div>

                <div class="form-group mb-4">    
                    <%= f.submit "Log in", class:"btn btn-success" %>
                </div> 
            <% end %>
        </div>
        <%= link_to '[Cancel and return back to all articles]', articles_path, class:"text-info text-center text-black"%>
    </div>
</div>