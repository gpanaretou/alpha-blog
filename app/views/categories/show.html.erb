<h1 class="text-center mt-4 mb-4">Category: <%= @category.name %>!</h1>



<% if logged_in? && current_user.admin? %>
    <div class="text-center mt-4">
      <%= link_to "Edit category name", edit_category_path(@category), class:"btn btn-info font-black" %>
    </div>

    <div class="text-center mt-2">
        <%= link_to "Delete category", category_path(@category), 
        data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure you want to delete this category?"
        }, 
        class:"btn btn-danger font-black" %>
    </div>
<% end %>

<div class="card-text text-center  mt-2">
    <%= pluralize(@category.articles.count, "article") %>
</div>

<%= render 'articles/article' %>

<div class="flickr_pagination mb-4">
    <div class="page_info">
      <%= page_entries_info @articles %>
    </div>
    <%= will_paginate @articles, :container => false %>
</div>