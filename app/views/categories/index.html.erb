<h1 class="text-center mt-4 mb-4">All categories</h1>


<% @categories.each do |category| %>
    <div class="row justify-content-md-center">
        <div class="col-3 mt-4">
            <div class="card shadow mb-4 bg-white rounded text-center">
                <div class="card-body ">
                    <h5 class="card-title"><%= link_to category.name, category_path(category.id) %></h5>
                    <div class="card-text text-center mt-2"><%= pluralize(category.articles.count, "article") %></div>
                </div>
                
                <div class="card-footer text-muted">
                    <small>Created <%= time_ago_in_words(category.created_at) %> ago
                    </small>
                </div>
            </div>
        </div>
    </div>
<% end %>


<div class="flickr_pagination mb-4">
    <div class="page_info">
      <%= page_entries_info @categories %>
    </div>
    <%= will_paginate @categories, :container => false %>
</div>