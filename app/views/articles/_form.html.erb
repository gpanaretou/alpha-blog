
<div class="container"> 
    <div class="row justify-content-center">
        <div class="col-10">
            <%= render 'shared/errors', obj: @article %>
            <%= form_with(model: @article, local:true, class:'bg-secondary font-white shadow p-3 mb-4 rounded') do |f| %>
                <div class="form-group mb-4 justify-content-center">
                    <%= f.label :title, class:"col-2 col-form-label text-light" %>
                    <div class="text-center">
                        <%= f.text_field :title, class:"form-control", placeholder:"Article's title" %>
                    </div>
                    
                </div>

                <div class="form-group mb-4">
                    <%= f.label :description, class:"text-light" %> <br/>
                    <%= f.text_area :description, rows: 10, class:"form-control", placeholder:"Description of article" %>
                    
                </div>


                <div class="form-group mb-4">
                    <div class="row">
                        <div class="col-sm-offset-2">
                            <%= f.label :category_ids, class:"text-light" %> <br/>
                            <%= f.collection_select :category_ids, Category.all, :id, :name,
                            { prompt: "Make your selection from the list below (can be empty)" }, { multiple: true, class: "form-select shadow rounded" } %>
                        </div>
                    </div>
                </div>

                <div class="form-group mb-4">    
                    <%= f.submit class:"btn btn-success" %>
                </div> 
            <% end %>
        </div>
    
    </div>
    <%= link_to '[Cancel and return back to all articles]', articles_path, class:"text-info"%>
</div>
